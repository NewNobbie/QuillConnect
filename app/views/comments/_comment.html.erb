<div id="<%= dom_id comment %>">
  <p>
    <strong>User:</strong>
    <%= comment.user_id %>
  </p>

  <p>
    <strong>Post:</strong>
    <%= comment.post_id %>
  </p>

  <p>
    <strong>Comment date:</strong>
    <%= comment.comment_date %>
  </p>

  <p>
    <strong>Comment content:</strong>
    <%= comment.comment_content %>
  </p>

  <p>
    <strong>Report:</strong>
    <%= comment.report %>
  </p>

</div>
